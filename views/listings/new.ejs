<% layout("./layouts/boilerplate") %>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card form-card shadow-sm">
            <div class="card-body p-4 p-md-5">
                <h3 class="mb-4">Create a New Listing</h3>
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="title" class="form-label fw-semibold">Title</label>
                        <input name="listing[title]" type="text" class="form-control" id="title" required />
                    </div>

                    <div class="mb-4">
                        <label for="description" class="form-label fw-semibold">Description</label>
                        <textarea name="listing[description]" class="form-control" id="description" rows="4" required></textarea>
                    </div>

                    <div class="mb-4">
                        <label for="image" class="form-label fw-semibold">Upload Listing Image</label>
                        <input name="listing[image]" type="file" class="form-control" id="image" required />
                    </div>

                    <!-- ✅ Category Dropdown -->
                    <div class="mb-4">
                        <label for="category" class="form-label fw-semibold">Category</label>
                        <select name="listing[category]" id="category" class="form-select" required>
                            <option value="">-- Select a Category --</option>
                            <option value="Trending">Trending</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Iconic Cities">Iconic Cities</option>
                            <option value="Hill Stations">Hill Stations</option>
                            <option value="Amazing Pools">Amazing Pools</option>
                            <option value="Castle">Castle</option>
                            <option value="Camping">Camping</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctic">Arctic</option>
                            <option value="Domes">Domes</option>
                            <option value="Boats">Boats</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="mb-4 col-md-4">
                            <label for="price" class="form-label fw-semibold">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">₹</span>
                                <input name="listing[price]" type="number" class="form-control" id="price" required />
                            </div>
                        </div>

                        <div class="mb-4 col-md-8">
                            <label for="country" class="form-label fw-semibold">Country</label>
                            <input name="listing[country]" type="text" class="form-control" id="country" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="location" class="form-label fw-semibold">Location</label>
                        <input name="listing[location]" type="text" class="form-control" id="location" required />
                    </div>

                    <button class="btn btn-dark add-btn w-100 mt-2">Add Listing</button>
                </form>
            </div>
        </div>
    </div>
</div>
